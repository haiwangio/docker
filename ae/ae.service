[Unit]
Description=ae
After=docker.service
Requires=docker.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop ae
ExecStartPre=-/usr/bin/docker kill ae
ExecStartPre=-/usr/bin/docker rm ae
ExecStart=/usr/bin/docker run -t --name=ae -p 10029:80  -v /home/core/data/ae:/home/aeternity -uroot ivories/ae

ExecStop=/usr/bin/docker stop ae

[Install]
WantedBy=multi-user.target

