#!/bin/bash

docker stop cargo 1>/dev/null 2>/dev/null
docker rm cargo 1>/dev/null 2>/dev/null

docker run --name cargo -it -e "CARGO_HOME=/root/.cargo" -e "RUSTUP_HOME=/root/.rustup" -e "RUSTUP_DIST_SERVER=http://mirrors.ustc.edu.cn/rust-static" -e "RUSTUP_UPDATE_ROOT=http://mirrors.ustc.edu.cn/rust-static/rustup" -e "TERM=xterm-256color" --net=host -e USER=root --user "root":"root" -v /home/core/data/rust/cargo:/root/.cargo -v /home/core/data/rust/rustup:/root/.rustup -v "$PWD":/data/rust -w /data/rust ivories/rust $*

docker stop cargo 1>/dev/null 2>/dev/null
docker rm cargo 1>/dev/null 2>/dev/null
