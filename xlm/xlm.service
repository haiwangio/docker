[Unit]
Description=xlm
After=docker.service
Requires=docker.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop xlm
ExecStartPre=-/usr/bin/docker kill xlm
ExecStartPre=-/usr/bin/docker rm xlm
ExecStart=/usr/bin/docker run -t --name=xlm -v /home/core/data/xlm:/root/ -u root ivories/xlm --pubnet

ExecStop=/usr/bin/docker stop xlm

[Install]
WantedBy=multi-user.target

