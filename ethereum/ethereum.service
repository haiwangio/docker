[Unit]
Description=ethereum
After=autorun.service
Requires=autorun.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop ethereum
ExecStartPre=-/usr/bin/docker kill ethereum
ExecStartPre=-/usr/bin/docker rm ethereum
ExecStart=/usr/bin/docker run --name=ethereum -v /home/core/data/ethereum:/root/.ethereum ivories/ethereum --ipcdisable --fast --cache=512
ExecStop=/usr/bin/docker stop ethereum

[Install]
WantedBy=multi-user.target

