[Unit]
Description=dante
After=docker.service
After=autorun.service
Requires=docker.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill dante
ExecStartPre=-/usr/bin/docker rm dante
ExecStart=/usr/bin/docker run --name dante -p 18080:18080 ivories/dante:1.0
ExecStop=/usr/bin/docker kill dante

[Install]
WantedBy=multi-user.target
