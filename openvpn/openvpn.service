[Unit]
Description=openvpn
Requires=autorun.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop openvpn
ExecStartPre=-/usr/bin/docker kill openvpn
ExecStartPre=-/usr/bin/docker rm openvpn
ExecStart=/usr/bin/docker run --name openvpn -v /home/core/data/openvpn:/etc/openvpn -p 51199:1194/udp --cap-add=NET_ADMIN ivories/openvpn
ExecStop=/usr/bin/docker stop openvpn
ExecStop=/usr/bin/docker kill openvpn

[Install]
WantedBy=multi-user.target

